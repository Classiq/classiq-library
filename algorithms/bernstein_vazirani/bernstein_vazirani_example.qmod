qfunc bv_predicate(a: int, const x: qbit[], permutable res: qbit) {
  repeat (i: x.len) {
    if ((floor(a / (2 ** i)) % 2) == 1) {
      CX(x[i], res);
    }
  }
}

qfunc bv_function(a: int, x: qbit[]) {
  aux: qbit;
  hadamard_transform(x);
  within {
    allocate(aux);
    X(aux);
    H(aux);
  } apply {
    bv_predicate(a, x, aux);
  }
  hadamard_transform(x);
}

qfunc main(output x: qnum<5>) {
  allocate(x);
  bv_function(13, x);
}
