qfunc bv_predicate<a: int>(x: qbit[], res: qbit) {
  repeat (i: len(x)) {
    if ((floor(a / (2 ** i)) % 2) == 1) {
      CX(x[i], res);
    } else {
      IDENTITY(res);
    }
  }
}

qfunc bv_function<a: int>(x: qbit[]) {
  aux: qbit;
  hadamard_transform(x);
  within {
    allocate<1>(aux);
    X(aux);
    H(aux);
  } apply {
    bv_predicate<a>(x, aux);
  }
  hadamard_transform(x);
}

qfunc main(output x: qbit[]) {
  allocate<5>(x);
  bv_function<13>(x);
}
