qfunc bb84(message: int[], alice_bases: int[], bob_bases: int[], qba: qbit[]) {
  repeat (i: message.len) {
    if (message[i] == 1) {
      X(qba[i]);
    }
  }
  repeat (i: alice_bases.len) {
    if (alice_bases[i] == 1) {
      H(qba[i]);
    }
  }
  repeat (i: bob_bases.len) {
    if (bob_bases[i] == 1) {
      H(qba[i]);
    }
  }
}

qfunc main(output qba: qbit[]) {
